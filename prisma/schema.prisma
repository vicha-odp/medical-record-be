generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  adminId   Int      @id @default(autoincrement())
  role      Role     @default(Admin)
  govId     String   @unique
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Doctor {
  doctorId      Int             @id @default(autoincrement())
  role          Role            @default(Doctor)
  govId         String          @unique
  name          String?
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  categoryName  Categories
  category      Category        @relation(fields: [categoryName], references: [categoryName])
  MedicalRecord MedicalRecord[]
}

model Patient {
  patientId     Int             @id @default(autoincrement())
  role          Role            @default(Patient)
  govId         String          @unique
  name          String?
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  medicalRecord MedicalRecord[]
}

model MedicalRecord {
  medRecId         Int        @id @default(autoincrement())
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  patientPatientId Int?
  doctorDoctorId   Int?
  doctorData       Doctor?    @relation(fields: [doctorDoctorId], references: [doctorId])
  patientData      Patient?   @relation(fields: [patientPatientId], references: [patientId])
  category         Category[]
}

model Category {
  categoryId    Int             @id @default(autoincrement())
  categoryName  Categories      @unique
  doctor        Doctor[]
  medicalRecord MedicalRecord[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

enum Categories {
  Psychiatry
  Neurology
}

enum Role {
  Patient
  Doctor
  Admin
}
