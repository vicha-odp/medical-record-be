generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  adminId      Int      @id @default(autoincrement())
  role         Role     @default(Admin)
  govId        String   @unique
  name         String?
  email        String   @unique
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Doctor {
  doctorId      Int             @id @default(autoincrement())
  role          Role            @default(Doctor)
  govId         String          @unique
  name          String?
  email         String          @unique
  password      String
  refreshToken  String?
  categoryName  Categories
  category      Category        @relation(fields: [categoryName], references: [categoryName])
  medicalRecord MedicalRecord[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Patient {
  patientId     Int             @id @default(autoincrement())
  role          Role            @default(Patient)
  govId         String          @unique
  name          String?
  email         String          @unique
  password      String
  refreshToken  String?
  medicalRecord MedicalRecord[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model MedicalRecord {
  medRecId     Int         @id @default(autoincrement())
  patientGovId String?     @unique
  doctorGovId  String?     @unique
  categoryId   Categories? @unique
  description  String
  doctorData   Doctor?     @relation(fields: [doctorGovId], references: [govId])
  patientData  Patient?    @relation(fields: [patientGovId], references: [govId])
  category     Category?   @relation(fields: [categoryId], references: [categoryName])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Category {
  categoryId    Int             @id @default(autoincrement())
  categoryName  Categories      @unique
  doctor        Doctor[]
  medicalRecord MedicalRecord[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

enum Categories {
  Psychiatry
  Neurology
}

enum Role {
  Patient
  Doctor
  Admin
}
